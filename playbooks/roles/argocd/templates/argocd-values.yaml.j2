server:
  ingress:
    enabled: true
    hosts:
      - {{ argocd_ingress_host }}
    ingressClassName: nginx
    annotations:
      kubernetes.io/ingress.class: nginx
      nginx.ingress.kubernetes.io/ssl-passthrough: "true"
      nginx.ingress.kubernetes.io/backend-protocol: "HTTPS"
  extraArgs:
    - --insecure
  service:
    type: ClusterIP

dex:
  enabled: false

notifications:
  enabled: false

configs:
  params:
    server.insecure: true

redis:
  enabled: true

# Disable TLS for easier initial setup
configs:
  params:
    server.insecure: true

# Optional: Enable metrics for monitoring
metrics:
  enabled: true
  serviceMonitor:
    enabled: false  # Set to true if you have Prometheus Operator installed